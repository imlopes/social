<odoo>

    <record model="ir.ui.view" id="whatsapp_thread_composer_form_view">
        <field name="model">whatsapp.thread.composer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="res_id" invisible="1" />
                    <field name="model" invisible="1" />
                    <field
                        name="partner_id"
                        domain="[('id', 'in', context.get('partners'))]"
                        options="{'no_open': 1, 'no_create': 1}"
                    />
                    <field
                        name="broker_channel_id"
                        domain="[('partner_id', '=', partner_id), ('broker_id.broker_type', '=', 'whatsapp')]"
                        options="{'no_open': 1, 'no_create': 1}"
                    />
                </group>
                <field name="body" />
                <footer>
                    <button
                        name="send"
                        string="Send"
                        icon="fa-whatsapp"
                        class="btn-primary"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="whatsapp_thread_composer_act_window">
        <field name="name">Whatsapp Composer</field> <!-- TODO -->
        <field name="res_model">whatsapp.thread.composer</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


</odoo>
